<head>
    <title>Manage Profile</title>
</head>
<body>
<div class="hero-unit">
    <form class="form-horizontal" id="studentRegistrationForm" method="POST" action="student/profile/update">
        <fieldset>

            <h2>Manage profile</h2><hr/>

            <div class="control-group">
                <div class="controls">
                        <span class="alert-info">
                            $!message
                        </span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Student ID</label>

                <div class="controls">
                    #springFormInput ('student.SID' , 'class="input-xlarge uneditable-input" readonly="readonly"')
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Name</label>

                <div class="controls">
                    #springFormInput ('student.fullName' , 'class="input-xlarge"')
                </div>
            </div>

