            <div class="control-group">
                <label class="control-label">Phone</label>

                <div class="controls">
                    #springFormInput ('student.phoneNumber' , 'class="input-xlarge"')
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Email</label>

                <div class="controls">
                    #springFormInput ('student.email' , 'class="input-xlarge"')
                </div>
            </div>


            <div class="control-group">
                <label class="control-label">Marks (SSC)</label>

                <div class="controls">
                    #springFormInput ('student.marks.sscMarks' , 'class="input-xlarge"')
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Marks (HSC)</label>

                <div class="controls">
                    #springFormInput ('student.marks.hscMarks' , 'class="input-xlarge"')
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">Marks (Current)</label>

                <div class="controls">
                    #springFormInput ('student.marks.currentDegreeMarks' , 'class="input-xlarge"')
                </div>
            </div>


            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-warning btn-large" rel="tooltip" title="Update">Update Profile</button>
                </div>
            </div>
